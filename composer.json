{
  "name": "soyhuce/laravel-docker",
  "description": "Interact with a Docker instance",
  "keywords": [
    "docker",
    "laravel",
    "api",
    "socket"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Julien Roche",
      "email": "julien.roche@soyhuce.fr",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-curl": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.5",
    "illuminate/support": "^9.0 || ^10.0",
    "spatie/laravel-data": "^3.5"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.13",
    "mockery/mockery": "^1.4",
    "nunomaduro/larastan": "^2.3",
    "orchestra/testbench": "^7.0 || ^8.0",
    "pestphp/pest": "^2.6"
  },
  "autoload": {
    "psr-4": {
      "Soyhuce\\Docker\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Soyhuce\\Docker\\ServiceProvider"
      ]
    }
  },
  "archive": {
    "exclude": [
      ".gitignore",
      ".php-cs-fixer.php",
      "composer.lock",
      "vendor"
    ]
  },
  "scripts": {
    "test": "./vendor/bin/pest",
    "test-coverage": "./vendor/bin/pest --coverage-html coverage",
    "analyse": "./vendor/bin/phpstan analyse",
    "format": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix",
    "all": [
      "@format",
      "@test",
      "@analyse"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true,
      "pestphp/pest-plugin": true
    }
  }
}
